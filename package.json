{
  "name": "react-ocean-forms",
  "version": "2.0.0-alpha2",
  "description": "Forms components for react based on the context api.",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "private": false,
  "eslint.packageManager": "yarn",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "webpack --watch --mode development",
    "build": "webpack -p",
    "lint": "tslint --project src"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jest/enzyme.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).js?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,mjs,ts,tsx}"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/tsconfig.json"
      }
    },
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest"
    },
    "moduleNameMapper": {
      "^~(.*)$": "<rootDir>/src$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "peerDependencies": {
    "react": "^16.4.0"
  },
  "dependencies": {
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "babel-core": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react-app": "^3.1.0",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jest": "^23.6.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "ts-jest": "^23.10.0",
    "ts-loader": "^5.1.1",
    "tslint": "^5.11.0",
    "tslint-consistent-codestyle": "^1.13.3",
    "tslint-eaa-contrib": "^0.1.2",
    "tslint-microsoft-contrib": "^5.2.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/environment-agency-austria/react-ocean-forms.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "forms",
    "form",
    "validation",
    "react-form",
    "react-forms",
    "react-input",
    "context"
  ],
  "author": "Denis Masinovic <denis.masinovic@umweltbundesamt.at>",
  "license": "MIT"
}
