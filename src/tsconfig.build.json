{
  "extends": "./tsconfig",
  /*
   * This file is used for the build process.
   */

  "compilerOptions": {
    // Don't generate the declaration files for now...
    "declaration": false,
    "allowJs": false,
    "checkJs": false,
  },
  "exclude": [
    // Make sure that all the test files are excluded from the build
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx"
  ]
}
