{
  "extends": "./tsconfig",
  /*
   * This file is used for the build process.
   */
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build"
  },
  "exclude": [
    // Make sure that all the test files are excluded from the build
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "config/**",
    "src/test-utils/**"
  ]
}
