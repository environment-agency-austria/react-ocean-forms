{
  "extends": "./tsconfig",
  /*
   * This file is used for the build process.
   */
  "compilerOptions": {
    "declaration": true,
    "allowJs": false,
    "checkJs": false,
  },
  "exclude": [
    // Make sure that all the test files are excluded from the build
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "config/**"
  ]
}
