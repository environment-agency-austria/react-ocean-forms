{
  "compilerOptions": {
    "outDir": "build",
    "jsx": "react",
    "declaration": false,
    "sourceMap": false,
    "lib": [
      "es5",
      "dom",

      "es2015.promise",
      "es2015.collection",
    ],
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true
  }
}
